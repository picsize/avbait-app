.mac-date-time
  &.ng-invalid-date
  &.ng-invalid-time
    background #ffe2e2
    border     solid 1px #dea9a9

.close, .close-modal
  width         18px
  height        18px
  border-radius 9px
  display       block
  background    #bdc0c7
  position      relative
  opacity       1

  &:after
    content    ''
    display    block
    width      2px
    height     10px
    background #FFF
    position   absolute
    top        4px
    left       8px
    transform  rotate(45deg)
  &:before
    content    ''
    display    block
    width      2px
    height     10px
    background #FFF
    position   absolute
    top        4px
    left       8px
    transform  rotate(-45deg)

  &:hover
    background #828590

.hide
  display none

.affix
  position fixed

  &-bottom
    position absolute
